<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.LibrarianWindowController"
            fx:id="mainAnchorPane"
            stylesheets="@../css/main.css">

    <VBox styleClass="nav"  fx:id="navbar"
          AnchorPane.bottomAnchor="10.0"
          AnchorPane.topAnchor="10.0"
          AnchorPane.leftAnchor="10.0"
          AnchorPane.rightAnchor="0.0">
        <VBox styleClass="img-logo">
            <ImageView fitWidth="200" preserveRatio="true"><Image url="@../img/logo.png"/></ImageView>
        </VBox>
        <Button text="Home" onAction="#handleHome">
            <graphic>
                <GridPane styleClass="menuGridPane">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="40" />
                    </columnConstraints>
                    <FontAwesomeIconView glyphName="HOME" glyphSize="20" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label text="Home" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                </GridPane>
            </graphic>
        </Button>
        <Button text="Books" onAction="#handleBooks">
            <graphic>
                <GridPane styleClass="menuGridPane">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="40" />
                    </columnConstraints>
                    <FontAwesomeIconView glyphName="BOOK" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label text="Books" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                </GridPane>
            </graphic>
        </Button>
        <Button text="Students" onAction="#handleStudents">
            <graphic>
                <GridPane styleClass="menuGridPane">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="40" />
                    </columnConstraints>
                    <FontAwesomeIconView glyphName="USERS" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label text="STUDENTS" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                </GridPane>
            </graphic>
        </Button>
        <Button text="Settings">
            <graphic>
                <GridPane styleClass="menuGridPane">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="40" />
                    </columnConstraints>
                    <FontAwesomeIconView glyphName="COGS" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label text="Settings" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                </GridPane>
            </graphic>
        </Button>
        <Region VBox.vgrow="ALWAYS" />
        <Button text="Logout" onAction="#handleLogOut" fx:id="btnLogOut">
            <graphic>
                <GridPane styleClass="menuGridPane">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="40" />
                    </columnConstraints>
                    <FontAwesomeIconView glyphName="SIGN_OUT" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label text="Log Out" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                </GridPane>
            </graphic>
        </Button>
    </VBox>

    <TabPane fx:id="booksTabPane" visible="false" tabClosingPolicy="UNAVAILABLE"
             AnchorPane.rightAnchor="10.0"
             AnchorPane.leftAnchor="280.0"
             AnchorPane.bottomAnchor="10.0"
             AnchorPane.topAnchor="10.0">
        <Tab text="All Books">
            <AnchorPane>
                <TableView fx:id="tblBooksTable"
                           AnchorPane.rightAnchor="450.0"
                           AnchorPane.bottomAnchor="10.0"
                           AnchorPane.topAnchor="10.0"
                           AnchorPane.leftAnchor="10.0">
                    <columns>
                        <TableColumn minWidth="60.0" text="ID">
                            <cellValueFactory>
                                <PropertyValueFactory property="id" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="200.0" text="Title">
                            <cellValueFactory>
                                <PropertyValueFactory property="title" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="200.0" text="Author">
                            <cellValueFactory>
                                <PropertyValueFactory property="author" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <VBox spacing="10.0"
                      AnchorPane.rightAnchor="10.0"
                      AnchorPane.bottomAnchor="10.0"
                      AnchorPane.topAnchor="10.0">
                    <TextArea maxWidth="430.0" VBox.vgrow="ALWAYS"/>
                    <TextArea maxWidth="430.0" VBox.vgrow="ALWAYS"/>
                </VBox>
            </AnchorPane>
        </Tab>
        <Tab text="RegistrationPanel">
        </Tab>
        <Tab text="Journal">
        </Tab>
    </TabPane>

    <GridPane visible="false" fx:id="studentsGridPane"
              AnchorPane.leftAnchor="280.0"
              AnchorPane.rightAnchor="10.0"
              AnchorPane.bottomAnchor="10.0"
              AnchorPane.topAnchor="10.0">
        <fx:include source="adminStudentView.fxml"/>
    </GridPane>

</AnchorPane>